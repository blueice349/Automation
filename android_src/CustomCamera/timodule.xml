<?xml version="1.0" encoding="UTF-8"?>
<ti:module xmlns:ti="http://ti.appcelerator.org" xmlns:android="http://schemas.android.com/apk/res/android">
	<!--
		Similar to tiapp.xml, but contains module/platform specific
		configuration in <iphone>, <android>, and <mobileweb> sections
	-->
	<iphone>
	</iphone>

	<android xmlns:android="http://schemas.android.com/apk/res/android" >
	    <manifest package="com.omadi.camera">
	        <uses-sdk android:minSdkVersion="7" />
	        <uses-permission android:name="android.permission.CAMERA" />
	        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	        <application>
	            <activity
	                android:name="com.omadi.camera.DgCamActivity"
	                android:screenOrientation="landscape"
	                android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
	                <action android:name="com.omadi.camera.DgCamActivity" />
	            </activity>

	            <activity
	                android:name="com.omadi.camera.NoCamera"
	                android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
	                 <action android:name="com.omadi.camera.NoCamera" />
	            </activity>
	        </application>
	    </manifest>
	</android>

	<mobileweb>
	</mobileweb>
</ti:module>
